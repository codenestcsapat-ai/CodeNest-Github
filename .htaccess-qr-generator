# ===================================================================
# APACHE CACHING CONFIGURATION FOR QR-GENERATOR.HTML
# CodeNest - Optimized for Lighthouse Performance
# ===================================================================

# Enable GZIP Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/javascript application/x-javascript
    AddOutputFilterByType DEFLATE application/json application/xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Enable Brotli Compression (if available)
<IfModule mod_brotli.c>
    AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType BROTLI_COMPRESS application/javascript application/x-javascript
    AddOutputFilterByType BROTLI_COMPRESS application/json application/xml
    AddOutputFilterByType BROTLI_COMPRESS image/svg+xml
</IfModule>

# ===================================================================
# BROWSER CACHING - STATIC ASSETS (1 YEAR WITH IMMUTABLE)
# ===================================================================
<IfModule mod_expires.c>
    ExpiresActive On
    
    # JavaScript files - 1 year with immutable flag
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # CSS files - 1 year with immutable flag
    ExpiresByType text/css "access plus 1 year"
    
    # Images - 1 year with immutable flag
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Fonts - 1 year with immutable flag
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML files - NO caching (always fresh)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# ===================================================================
# CACHE-CONTROL HEADERS WITH IMMUTABLE FLAG
# ===================================================================
<IfModule mod_headers.c>
    # JavaScript files
    <FilesMatch "\.(js)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # CSS files
    <FilesMatch "\.(css)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Images
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Fonts
    <FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # HTML files - NO caching
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Security headers
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# ===================================================================
# SPECIFIC FILE CACHING RULES
# ===================================================================
<FilesMatch "^(script\.js|qr_app\.js|cookie-consent\.js)$">
    <IfModule mod_headers.c>
        Header set Cache-Control "public, max-age=31536000, immutable"
    </IfModule>
</FilesMatch>

<FilesMatch "^(styles\.css|qr_style\.css|cookie-consent\.css)$">
    <IfModule mod_headers.c>
        Header set Cache-Control "public, max-age=31536000, immutable"
    </IfModule>
</FilesMatch>

<FilesMatch "^(logo_png\.png|logo_footer-modified\.png)$">
    <IfModule mod_headers.c>
        Header set Cache-Control "public, max-age=31536000, immutable"
    </IfModule>
</FilesMatch>

# ===================================================================
# MIME TYPES
# ===================================================================
<IfModule mod_mime.c>
    AddType image/webp .webp
    AddType application/javascript .js
    AddType text/css .css
</IfModule>

# ===================================================================
# USAGE INSTRUCTIONS
# ===================================================================
# 1. Copy this file to your web root directory
# 2. Rename to .htaccess (remove the -qr-generator suffix)
# 3. Ensure mod_expires, mod_headers, and mod_deflate are enabled
# 4. Test with: curl -I https://yourdomain.com/script.js
# 5. Verify Cache-Control header shows: public, max-age=31536000, immutable
# ===================================================================
